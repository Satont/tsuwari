{
  "name": "tsuwari",
  "private": true,
  "type": "module",
  "scripts": {
    "lint": "eslint --ext .ts,.vue apps/",
    "lint:fix": "eslint --fix --ext .ts,.vue apps/",
    "dev": "doppler run -- turbo run dev --filter=./apps/* --filter=!./apps/api",
    "start": "pnpm run -r start --filter=!@tsuwari/frontend",
    "start:integrations": "pnpm --filter=@tsuwari/integrations start",
    "start:api": "pnpm --filter=@tsuwari/api start",
    "start:eventsub": "pnpm --filter=@tsuwari/eventsub start",
    "start:dota": "pnpm --filter=@tsuwari/dota start",
    "start:bots": "pnpm --filter=@tsuwari/bots start",
    "start:scheduler": "pnpm --filter=@tsuwari/scheduler start",
    "start:parser": "pnpm --filter=@tsuwari/parser start",
    "start:eval": "pnpm --filter=@tsuwari/eval start",
    "start:streamstatus": "pnpm --filter=@tsuwari/streamstatus start",
    "start:watched": "pnpm --filter=@tsuwari/watched start",
    "build:libs": "turbo run build --filter=./libs/**",
    "build:backend": "turbo run build --filter=!@tsuwari/watched --filter=!@tsuwari/frontend",
    "build:bots": "turbo run build --filter=bots",
    "build:eventsub": "turbo run build --filter=eventsub",
    "build:frontend": "turbo run build --filter=frontend",
    "build:api": "turbo run build --filter=api",
    "build:eval": "turbo run build --filter=eval",
    "build:dota": "turbo run build --filter=dota",
    "build:scheduler": "turbo run build --filter=scheduler",
    "build:streamstatus": "turbo run build --filter=streamstatus",
    "build:watched": "turbo run build --filter=watched",
    "dev:pm2": "pnpm build:backend && pm2 start ecosystem.config.cjs && pm2 logs all",
    "dev:bots": "doppler run -- turbo run dev --filter=bots",
    "dev:parser": "cd apps/parser && nodemon --config ./nodemon.json",
    "dev:timers": "cd apps/timers && nodemon --config ./nodemon.json",
    "dev:eventsub": "doppler run -- turbo run dev --filter=eventsub",
    "dev:api": "doppler run -- turbo run dev --filter=api",
    "dev:streamstatus": "doppler run -- turbo run dev --filter=streamstatus",
    "dev:integrations": "doppler run -- turbo run dev --filter=integrations",
    "dev:scheduler": "doppler run -- turbo run dev --filter=scheduler",
    "dev:watched": "doppler run -- turbo run dev --filter=watched",
    "dev:frontend": "doppler run -- turbo run dev --filter=frontend",
    "dev:config": "doppler run -- turbo run dev --filter=config",
    "dev:dota": "doppler run -- turbo run dev --filter=dota",
    "dev:eval": "doppler run -- turbo run dev --filter=eval",
    "migrate:deploy": "doppler run -- pnpm --filter=@tsuwari/typeorm run deploy"
  },
  "author": "Satont <satontworldwide@gmail.com>",
  "devDependencies": {
    "@satont/eslint-config": "github:satont/eslint-config",
    "@types/node": "18.7.23",
    "@typescript-eslint/eslint-plugin": "5.38.1",
    "@typescript-eslint/parser": "5.38.1",
    "eslint": "8.24.0",
    "eslint-plugin-import": "2.26.0",
    "nodemon": "2.0.20",
    "ts-node": "10.9.1",
    "tsx": "3.9.0",
    "turbo": "1.5.5",
    "typescript": "4.8.4"
  },
  "engines": {
    "node": "18.7.0"
  }
}
