extend type Query {
	emotesStatistics(opts: EmotesStatisticsOpts!): EmotesStatisticResponse! @isAuthenticated
}

type EmotesStatisticResponse {
	emotes: [EmotesStatistic!]!
	total: Int!
}

type EmotesStatistic {
	emoteName: String!
	usages: Int!
	lastUsedAt: Time!
}

input EmotesStatisticsOpts {
	search: String
	page: Int
	perPage: Int
}
