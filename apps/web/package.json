{
  "name": "@tsuwari/web",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "pnpm build:app && pnpm build:server",
    "build:app": "vite build",
    "build:server": "tsc -p tsconfig.server.json",
    "start": "pnpm serve:prod",
    "serve:dev": "cross-env NODE_ENV=development PORT=3005 tsx ./src/server/index.ts",
    "serve:prod": "cross-env NODE_ENV=production PORT=3005 node ./dist/server/index.js",
    "serve:prod:proxy": "cross-env NODE_ENV=production PORT=3005 API_PROXY=http://localhost:3002 node ./dist/server/index.js"
  },
  "devDependencies": {
    "@tsuwari/shared": "workspace:*",
    "@tsuwari/ui-components": "workspace:*",
    "@tsuwari/ui-fonts": "workspace:*",
    "@tsuwari/ui-theme": "workspace:*",
    "@vitejs/plugin-vue": "3.2.0",
    "autoprefixer": "10.4.13",
    "postcss": "8.4.18",
    "tailwindcss": "3.2.1",
    "tailwindcss-animation-delay": "1.0.7",
    "typescript": "4.8.4",
    "vite": "3.2.2",
    "vite-svg-loader": "3.6.0",
    "vue-router": "4.1.6"
  },
  "dependencies": {
    "@egjs/flicking-plugins": "4.4.0",
    "@egjs/vue3-flicking": "4.10.2",
    "@fastify/compress": "6.1.1",
    "@fastify/middie": "8.0.0",
    "@fastify/static": "6.5.0",
    "@fastify/http-proxy": "8.2.3",
    "@nanostores/persistent": "0.7.0",
    "@nanostores/vue": "0.6",
    "@tanstack/vue-query": "4.14.1",
    "@vue/server-renderer": "3.2.41",
    "@vueuse/core": "9.4.0",
    "cross-env": "7.0.3",
    "fastify": "4.9.2",
    "nanostores": "0.7.0",
    "vite-plugin-ssr": "0.4.43",
    "vue": "3.2.41",
    "vue-i18n": "9.2.2"
  }
}
