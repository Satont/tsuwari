{
	"name": "@twir/grpc",
	"type": "module",
	"scripts": {
		"prebuild": "rimraf dist",
		"build": "pnpm -w cli bin --pwd ./libs/grpc buf generate --exclude-path=node_modules/protobufjs --include-imports --include-wkt && pnpm build:ts",
		"build:ts": "tsc -p tsconfig.grpc.json && tsc -p tsconfig.json"
	},
	"exports": {
		"./*": {
			"import": "./dist/*.js"
		}
	},
	"typesVersions": {
		"*": {
			"*": [
				"./dist/*.d.ts"
			]
		}
	},
	"dependencies": {
		"long": "5.2.3",
		"nice-grpc": "2.1.8",
		"nice-grpc-common": "2.0.2",
		"protobufjs": "7.2.6",
		"ts-proto": "1.172.0"
	}
}
