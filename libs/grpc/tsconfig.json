{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "preserveSymlinks": true,
    "composite": false,
    "esModuleInterop": true
  },
  "includes": [
    "./**/*.ts"
  ],
  "exclude": [
    "./dist",
    "gen.ts"
  ]
}
