{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Debug Api",
      "port": 9229,
      "remoteRoot": "/app",
      "sourceMaps": true,
      "restart": true,
      "localRoot": "${workspaceFolder}/apps/api",
      "resolveSourceMapLocations": [
        "${workspaceFolder}/apps/api/dist/**/*",
      ],
      "internalConsoleOptions": "neverOpen",
      "skipFiles": [
        "<node_internals>/**",
        "${workspaceFolder}/apps/api/<node_internals>/**",
      ],
      "autoAttachChildProcesses": false,
      "trace": false
    },
