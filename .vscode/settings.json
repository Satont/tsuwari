{
  "files.autoSave": "onFocusChange",
  "editor.formatOnSave": true,
  "editor.insertSpaces": true,
  "editor.detectIndentation": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.tabSize": 2,
  "editor.codeActionsOnSave": {
    "source.sortImports": true
  },
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "typescript.preferences.importModuleSpecifierEnding": "js",
  "typescript.tsdk": "node_modules/typescript/lib",
  "remote.SSH.defaultForwardedPorts": [
    {
      "localPort": 3002,
      "name": "api",
      "remotePort": 3002
    },
    {
      "localPort": 3003,
      "name": "eventsub",
      "remotePort": 3003
    },
    {
      "localPort": 3005,
      "name": "frontend",
      "remotePort": 3005
    },
    {
      "localPort": 5555,
      "name": "prisma studio",
      "remotePort": 5555
    },
    {
      "localPort": 54320,
      "name": "adminer",
      "remotePort": 54320
    },
    {
      "localPort": 8222,
      "name": "nats",
      "remotePort": 8222
    }
  ],
  "i18n-ally.localesPaths": ["apps/frontend/src/locales"],
  "i18n-ally.editor.preferEditor": true,
  "i18n-ally.sortKeys": true,
  "i18n-ally.keepFulfilled": true,
  "i18n-ally.keystyle": "nested",
  "i18n-ally.sourceLanguage": "gb",
  "prisma.fileWatcher": false,
  "typescript.format.enable": false,
  // "editor.rulers": [100],
  // "go.useLanguageServer": true,
  "gopls": {
    "formatting.gofumpt": true
  },
  "emeraldwalk.runonsave": {
    "commands": [
      {
        "match": "\\.go$",
        "cmd": "golines ${file} -w -m 100 --base-formatter=gofumpt"
      }
    ]
  },
  "go.goroot": "${workspaceFolder}/.devbox/nix/profile/default/share/go",
  "go.toolsGopath": "${workspaceFolder}/devbox/go"
}
